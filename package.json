{
  "name": "@bilberrry/strapi-plugin-strapi-algolia",
  "version": "1.0.0",
  "description": "Index articles configured to Algolia",
  "keywords": [
    "strapi",
    "plugin",
    "algolia"
  ],
  "homepage": "https://github.com/bilberrry/strapi-plugin-strapi-algolia",
  "repository": {
    "type": "git",
    "url": "https://github.com/bilberrry/strapi-plugin-strapi-algolia.git"
  },
  "license": "MIT",
  "author": {
    "name": "Bohdan Protsiuk"
  },
  "maintainers": [
    {
      "name": "Bohdan Protsiuk"
    }
  ],
  "type": "commonjs",
  "exports": {
    "./package.json": "./package.json",
    "./strapi-admin": {
      "types": "./dist/admin/src/index.d.ts",
      "source": "./admin/src/index.ts",
      "import": "./dist/admin/index.mjs",
      "require": "./dist/admin/index.js",
      "default": "./dist/admin/index.js"
    },
    "./strapi-server": {
      "types": "./dist/server/src/index.d.ts",
      "source": "./server/src/index.ts",
      "import": "./dist/server/index.mjs",
      "require": "./dist/server/index.js",
      "default": "./dist/server/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "strapi-plugin build",
    "watch": "strapi-plugin watch",
    "watch:link": "strapi-plugin watch:link",
    "verify": "strapi-plugin verify",
    "test:ts:front": "run -T tsc -p admin/tsconfig.json",
    "test:ts:back": "run -T tsc -p server/tsconfig.json",
    "format": "prettier --write .",
    "lint": "run-p prettier eslint",
    "prettier": "prettier --check .",
    "eslint": "eslint --ignore-path .eslintignore .",
    "test": "jest --runInBand --forceExit --detectOpenHandles",
    "test:ci": "npm run test --ci"
  },
  "dependencies": {
    "@strapi/design-system": "^2.0.0-rc.11",
    "@strapi/icons": "^2.0.0-rc.11",
    "@strapi/utils": "^5.1.1",
    "algoliasearch": "5.8.1",
    "deep-reduce": "^1.0.5",
    "react-intl": "^6.8.4"
  },
  "devDependencies": {
    "@strapi/sdk-plugin": "^5.2.7",
    "@strapi/strapi": "^5.1.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.27.0",
    "styled-components": "^6.1.13",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3",
    "vite": ">=5.4.10"
  },
  "peerDependencies": {
    "@strapi/sdk-plugin": "^5.2.7",
    "@strapi/strapi": "^5.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.27.0",
    "styled-components": "^6.1.13"
  },
  "engines": {
    "node": ">=18.0.0 <=20.x.x",
    "npm": ">=6.0.0"
  },
  "strapi": {
    "name": "strapi-algolia",
    "description": "Index articles configured to Algolia",
    "kind": "plugin",
    "icon": "plug"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
